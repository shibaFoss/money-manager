<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_4"
    android:layout_marginEnd="@dimen/dp_8"
    android:layout_marginStart="@dimen/dp_8"
    android:layout_marginTop="@dimen/dp_4"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="@dimen/dp_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_8"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_memo"
            style="@style/textBodyStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_8"
            android:gravity="start"
            android:text="@string/memo_picture"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_4"
            android:background="?android:attr/textColorSecondary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8">

            <Button
                android:id="@+id/bnt_memo_photo_taker"
                style="@style/textBodyStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/take_a_photo"
                android:textSize="@dimen/sp_16" />

            <ImageView
                android:id="@+id/img_memo_photo"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@+id/bnt_memo_photo_taker"
                android:contentDescription="@string/memo_image"
                android:scaleType="centerCrop"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>
