<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/dp_16"
              android:background="@drawable/ic_dialog_bg"
              android:minHeight="200dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_2"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/txt_preview"
                style="@style/textTitleStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/bntClear"
                android:gravity="end|center_vertical"
                android:padding="@dimen/dp_10"
                android:singleLine="true"
                android:textSize="@dimen/sp_24"/>

            <ImageButton
                android:id="@+id/bntClear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/dp_10"
                android:src="@drawable/ic_content_clear"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bnt1"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/bnt2"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/bnt3"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"

                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/bntDivision"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="÷"

                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bnt4"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"

                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/bnt5"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"

                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/bnt6"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"

                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/bntMultiply"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="×"

                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bnt7"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"

                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/bnt8"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"

                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/bnt9"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"

                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/bntMinus"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="−"

                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bntDot"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."

                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/bnt0"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"

                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/bntEqual"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="

                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/bntPlus"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"

                android:textSize="@dimen/sp_20"
                android:textStyle="normal"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/transparent_black_light"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bntCancel"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/cancel"

                android:textStyle="normal"/>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/transparent_black_light"/>

            <Button
                android:id="@+id/bntDone"
                style="@style/textButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/done"
                android:textStyle="normal"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
